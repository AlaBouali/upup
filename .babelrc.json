{
    "sourceType": "unambiguous",
    "presets": [
        [
            "@babel/preset-env",
            {
                "targets": {
                    "chrome": 100
                }
            }
        ],
        "@babel/preset-typescript",
        ["@babel/preset-react", { "runtime": "automatic" }]
    ],
    "plugins": [
        "@babel/plugin-proposal-optional-chaining",
        [
            "module-resolver",
            {
                "extensions": [".ts", ".tsx"],
                "root": "./src",
                "alias": {
                    "#components": "./src/components",
                    "#types": ["./src/types"],
                    "#hooks": ["./src/hooks"],
                    "#lib": ["./src/lib"]
                }
            }
        ]
    ]
}
